<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:id="@+id/itemLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="TITLE : "
                android:id="@+id/titleItemTextView"
                android:textSize="22sp"
                android:textColor="#33b5e5" />

            <ListView
                android:id="@+id/listLocationActionListView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:id="@+id/locPhotoView"
            android:src="@drawable/ic_image_camera"
            android:scaleType="fitCenter"
            android:layout_gravity="top|center"

            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            android:paddingBottom="2dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/editItemButton"
                android:background="@drawable/ic_image_edit_blue"
                android:padding="3dp"
                android:layout_marginLeft="3dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/deleteItemButton"
                android:background="@drawable/ic_action_delete"
                android:layout_marginTop="7dp"
                android:layout_marginRight="2dp" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
